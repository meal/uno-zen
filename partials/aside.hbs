<aside class="cover" style="background: url({{@blog.cover}}) center/cover no-repeat fixed">
  <div class="cover container">
    <div class="profile">
      <a id="avatar-link" title="link to homepage for {{@blog.title}}" href="{{@blog.url}}/#open">
        <h1 id="profile-title">{{@blog.title}}</h1>
        <h3 id="profile-resume">software developer, hardware hacker.</h3>
      </a>

      <hr class="divider long" />
      <p>{{@blog.description}}</p>
      <hr class="divider short" />
      <div class="navigation">
        <div class="profile contact">
          {{navigation}}
          {{> social}}
          {{> search }}
        </div>
      </div>
    </div>
  </div>
</aside>
